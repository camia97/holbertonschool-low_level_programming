CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
RM=rm

.PHONY: all
all: $(NAME)

school: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

.PHONY: clean
clean:
	$(RM) -f $(Name) *~

.PHONY: oclean
oclean:
	$(RM) -f $(OBJ)

.PHONY: fclean
fclean:
	$(RM) -f $(NAME) *~ $(OBJ)

.PHONY: re
re:
	$(RM) -f $(NAME) *~ $(OBJ)
	$(CC) $(SRC) -o $(NAME)
